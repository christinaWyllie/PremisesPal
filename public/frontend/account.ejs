<!DOCTYPE html>
<html>
  <head>
    <title>PremisesPal/Account</title>
    <link rel="stylesheet" href="styles/main.css">
    <link rel="icon" href="/imgs/PremisesPal_Favicon.png">
  </head>
  <body>
    <div class="account">
      <h1>Your Premises Pal Account</h1>
      <fieldset>
        <legend>Personal Information</legend>
        <p>Email: <%= email %></p>
        <p>Skills: <%= skills.length === 0 ? 'None' : skills.join(', ') %></p>
      </fieldset>
      <button onclick="window.location.href='feed.html';">Back</button>
    </div>
    <h1>Your Posts</h1>
    <div id="post-grid">
      <% for (let i = 0; i < posts.length; i++) { %>
        <div class="post">
          <h2><%= posts[i].title %></h2>
          <p>Description: <%= posts[i].description %></p>
          <p>Price: $<%= posts[i].price %></p>
          <% if (posts[i].requiredSkills) { %>
            <p>Skills: <%= posts[i].requiredSkills.join(', ') %></p>
          <% } %>
          <p>Contact: <%= posts[i].posterEmail %></p>
        </div>
      <% } %>
    </div>
  </body>
</html>